# Environment Configuration
ENVIRONMENT=local  # local, dev, prod

# Platform Database (stores tenant metadata, configs, usage metrics)
PLATFORM_MONGO_DB_URL=mongodb://localhost:27017
PLATFORM_MONGO_DB_NAME=agentic_talkdoc_platform

# Redis (caching, session management)
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# AI/LLM Providers
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
OPENROUTER_API_KEY=sk-or-your-openrouter-key

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS Services
AWS_SES_REGION=us-west-2
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_CHIME_REGION=us-east-1
AWS_SQS_QUEUE_URL=https://sqs.us-west-2.amazonaws.com/your-account/agentic-talkdoc-tasks

# Insurance & EDI (Stedi)
STEDI_API_KEY=your-stedi-api-key
STEDI_CONTROL_NUMBER=your-control-number
STEDI_ACCOUNT_ID=your-stedi-account-id

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Platform URLs
PLATFORM_API_BASE_URL=http://localhost:8000
ADMIN_CONSOLE_URL=http://localhost:3000
DEFAULT_PATIENT_PORTAL_URL=http://localhost:3001
DEFAULT_CLINICIAN_DASHBOARD_URL=http://localhost:3002
DEFAULT_COORDINATOR_DASHBOARD_URL=http://localhost:3003

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300
AGENT_CONFIDENCE_THRESHOLD=0.85

# Audit & Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_AUDIT_LOGGING=true
CLOUDWATCH_LOG_GROUP=agentic-talkdoc-platform

# Feature Flags
ENABLE_AGENT_EXECUTION=true
ENABLE_MULTI_AGENT_WORKFLOWS=true
ENABLE_REALTIME_MONITORING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Tenant Provisioning
DEFAULT_TENANT_DB_PREFIX=talkdoc_tenant_
ENABLE_AUTO_TENANT_PROVISIONING=false

# Billing & Usage Tracking
ENABLE_USAGE_METERING=true
BILLING_CYCLE_DAY=1  # Day of month for billing cycle

# Compliance
HIPAA_COMPLIANCE_MODE=true
ENABLE_PHI_ENCRYPTION=true
DATA_RETENTION_DAYS=2555  # 7 years default
